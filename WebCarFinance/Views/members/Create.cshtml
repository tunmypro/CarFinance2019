                                @Html.EditorFor(model => model.memtel, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.memtel, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.memincome, htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.memincome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.memincome, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                <div style="text-align: center;">
                    <button type="submit" class="btn btn-primary">สมัคร</button>
                    <a href='@Url.Action("Create", "logins")' class="btn btn-outline-secondary">เคยกรอกหน้านี้แล้ว</a>
                </div>
            </div>
        </div>
    </div>
}

