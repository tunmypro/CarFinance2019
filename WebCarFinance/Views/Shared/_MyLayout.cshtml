<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="../../Content2/finances/fonts/icomoon/style.css">

    <link rel="stylesheet" href="../../Content2/finances/css/bootstrap.min.css">
    <link rel="stylesheet" href="../../Content2/finances/css/jquery-ui.css">
    <link rel="stylesheet" href="../../Content2/finances/css/owl.carousel.min.css">
    <link rel="stylesheet" href="../../Content2/finances/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="../../Content2/finances/css/owl.theme.default.min.css">

    <link rel="stylesheet" href="../../Content2/finances/css/jquery.fancybox.min.css">

    <link rel="stylesheet" href="../../Content2/finances/css/bootstrap-datepicker.css">

    <link rel="stylesheet" href="../../Content2/finances/fonts/flaticon/font/flaticon.css">

    <link rel="stylesheet" href="../../Content2/finances/css/aos.css">

    <link rel="stylesheet" href="../../Content2/finances/css/style.css">
</head>
<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">

    <div class="site-wrap">
        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>
            <div class="site-mobile-menu-body"></div>
        </div>


        <header class="site-navbar js-sticky-header site-navbar-target" role="banner">

            <div class="container">
                <ul class="row align-items-center">

                    <div class="col-6 col-xl-2">
                        <h1 class="mb-0 site-logo"><a href='@Url.Action("Index", "Home")' class="h2 mb-0">CarFinance<span class="text-primary"></span> </a></h1>
                    </div>

                    <ul class="col-12 col-md-10 d-none d-xl-block">
                        <nav class="site-navigation position-relative text-right" role="navigation">

                            <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                                @if (Session["pay"] == null)
                                {
                                    <li><a class="nav-link" href='@Url.Action("Details", "View_Car")'>ประเมิณราคารถ</a></li>
                                    <li><a class="nav-link" href='@Url.Action("Index", "GGMap")'>หาจุดชำระเงิน</a></li>
                                }
                                else
                                {
                                    <li>
                                        <a class="nav-link" href='@Url.Action("Index", "View_Customer")'>จ่ายเงิน</a>
                                    </li>
                                    <li>
                                        <a class="nav-link" href='@Url.Action("Create", "loans")'>ทำสัญญา</a>
                                    </li>
                                    <li class="has-children">
                                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">จัดการ</a>
                                        <ul class="dropdown">
                                            <li><a class="dropdown-item" href='@Url.Action("Create", "cars")'>เพิ่มยี่ห้อรถยนต์</a></li>
                                            <li><a class="dropdown-item" href='@Url.Action("Create", "gens")'>เพิ่มรุ่นรถยนต์</a></li>
                                        </ul>
                                    </li>
                                    <li class="has-children">
                                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">ดู</a>
                                        <ul class="dropdown">
                                            <li><a class="dropdown-item" href='@Url.Action("Index", "View_Car")'>รถยนต์</a></li>
                                            <li><a class="dropdown-item" href='@Url.Action("Index", "members")'>บุคคล</a></li>
                                            <li><a class="dropdown-item" href='@Url.Action("Index", "In_Ex")'>รายรับ-รายจ่าย</a></li>
                                            <li> <a class="dropdown-item" href='@Url.Action("View_Customers", "View_Customer")'>บุคคลค้างชำระ</a></li>
                                        </ul>
                                    </li>
                                }

                                @if (Session["Pass"] != null)
                                {
                                    <li>
                                        <p class="text-danger">
                                            ยินดีต้อนรับคุณ : <span class="redText">@Session["User"]</span>
                                        </p>
                                    </li>
                                    <li><a class="nav-link" href='@Url.Action("Details", "members", new {id = Session["Userid"]})'>ข้อมูล</a></li>
                                    <li><a class="nav-link" href='@Url.Action("Shows", "View_Customer", new {name = Session["User"]})'>ข้อมูลการกู้</a></li>
                                    <li><a class="nav-link" href='@Url.Action("Logout", "logins")'>ออกจากระบบ</a></li>
                                }
                                else
                                {
                                    <li><a class="nav-link" href='@Url.Action("Index", "logins")'>เข้าสู่ระบบ</a></li>
                                }

                            </ul>
                        </nav>
                    </ul>


                    <div class="col-6 d-inline-block d-xl-none ml-md-0 py-3" style="position: relative; top: 3px;"><a href="#" class="site-menu-toggle js-menu-toggle float-right"><span class="icon-menu h3"></span></a></div>
                    
                </ul>
            </div>

        </header>


        <br />
        <br />
        <br />
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @(DateTime.Now.Year + 543) - Create By TiceTmP</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)

        <script src="../../Content2/finances/js/jquery-3.3.1.min.js"></script>
        <script src="../../Content2/finances/js/jquery-ui.js"></script>
        <script src="../../Content2/finances/js/popper.min.js"></script>
        <script src="../../Content2/finances/js/bootstrap.min.js"></script>
        <script src="../../Content2/finances/js/owl.carousel.min.js"></script>
        <script src="../../Content2/finances/js/jquery.countdown.min.js"></script>
        <script src="../../Content2/finances/js/jquery.easing.1.3.js"></script>
        <script src="../../Content2/finances/js/aos.js"></script>
        <script src="../../Content2/finances/js/jquery.fancybox.min.js"></script>
        <script src="../../Content2/finances/js/jquery.sticky.js"></script>
        <script src="../../Content2/finances/js/isotope.pkgd.min.js"></script>


        <script src="../../Content2/finances/js/main.js"></script>

    </div>
</body>
</html>
