<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppCar.View.Login"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="เข้าสู่ระบบ">


    <ContentPage.Content>
        <StackLayout>
            <Entry
                x:Name="UsernameEntry"
                Margin="15"
                Placeholder="ยูสเซอร์เนม"
                PlaceholderColor="Silver" />
            <Label
                x:Name="userError"
                FontSize="Large"
                HorizontalOptions="Center"
                TextColor="Red" />
            <Entry
                x:Name="PasswordEntry"
                Margin="15"
                IsPassword="true"
                Keyboard="Default"
                Placeholder="พาสเวิร์ด"
                PlaceholderColor="Silver" />
            <Label
                x:Name="passwordError"
                FontSize="Large"
                HorizontalOptions="Center"
                TextColor="Red" />
            <Button
                Margin="15"
                BackgroundColor="White"
                BorderColor="Black"
                BorderRadius="10"
                BorderWidth="2"
                Clicked="Login_Clicked"
                Text="เข้าสู่ระบบ" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>